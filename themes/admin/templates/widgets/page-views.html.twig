
<div class="mb-5 {{ conf.cols_page_views_widget }}">
    <h5>
        {{ "PLUGIN_PAGE_STATS.PAGE_VIEWS_WIDGET"|t }}
    </h5>
    <div style="width: w-100">
        <canvas id="chart_hits"></canvas>
    </div>
</div>

<script>
    var ctx = document.getElementById("chart_hits").getContext("2d");
    var myChart = new Chart(ctx, {
        type: "line",
        options: {
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        },
        data: {
            datasets: [
                {
                    label: '{{ "PLUGIN_PAGE_STATS.TABLE_PAGE_VIEWS"|t }}',
                    data: [{% for s in data %}
                            {
                                x: "{{ s.date }}",
                                y: {{ s.hits }}
                            },{% endfor %}]
                }
            ]
        }
    });
</script>
