<div class="mb-5 {{ conf.cols_top_users_widget }}">
    <h5>
        {% if hide_show_all is not defined %}
            <a href="{{ pageStats.urls.topUsers }}" title="{{ "PLUGIN_PAGE_STATS.VIEW_ALL"|t }}">
                <i class="fa fa-fw fa-line-chart"></i>
                {{ "PLUGIN_PAGE_STATS.TOP_USERS"|t }}</a>
        {% else %}
            {{ "PLUGIN_PAGE_STATS.TOP_USERS"|t }}
        {% endif %}
    </h5>
    <table class="table table-hover">
        <tr>
            <th>
                {{ "PLUGIN_PAGE_STATS.TABLE_USER"|t }}
            </th>
            {% if show_views is defined %}
                <th>
                    {{ "PLUGIN_PAGE_STATS.PAGE_VIEWS_WIDGET"|t }}
                </th>
            {% endif %}
        </tr>
        {% for s in data %}
            <tr>
                <td>
                    <a class="me-2" href="{{ pageStats.urls.userDetails}}?user={{ s.user|default(s.ip) }}" title="{{ s.hits }} {{ "PLUGIN_PAGE_STATS.PAGE_VIEWS"|t }}">
                        <i class="fa fa-fw fa-line-chart"></i>
                    {{ s.user|default("PLUGIN_PAGE_STATS.NOT_LOGGED_IN"|t) }}
                    </a>
                </td>
                {% if show_views is defined %}
                    <td>
                        {{ s.hits }}
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
</div>
