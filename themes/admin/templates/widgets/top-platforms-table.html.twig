<table class="table table-hover">
    <tr>
        <th>
            {{ "PLUGIN_PAGE_STATS.TABLE_PLATFORM"|t }}
        </th>
        <th>
            {{ "PLUGIN_PAGE_STATS.TABLE_SHARE"|t }}
        </th>
    </tr>
    {% for s in data %}
        <tr>
            <td>
                {{ s.platform }}
            </td>
            <td>
                <span title="{{s.hits}}">{{ s.share }}
                    %</span>
            </td>
        </tr>
    {% endfor %}
</table>
